<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/silver"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/product_image"
            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/product_overlay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="8dp"
            android:background="@color/orange"
            android:padding="10dp"
            android:text="Since,yesterday"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/save_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/save_display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saved"
                android:layout_gravity="center"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/reject_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:gravity="center"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/reject_display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rejected"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/filters_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/filters_display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filters"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>