
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="HOW CAN I HELP YOU?"
                android:textColor="@color/orange"/>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="center_horizontal"
                >
                <AutoCompleteTextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/inputSearch"
                    android:hint="Search products..."
                    android:inputType="textVisiblePassword"
                    android:gravity="bottom"
                    android:outlineProvider="background"
                    android:password="false"
                    android:phoneNumber="false"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_search"
                    android:gravity="center_horizontal"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="START OFF WHERE YOU LEFT"
                android:textColor="@color/orange"/>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_height="100dp"
                            android:layout_width="match_parent"
                            android:background="@color/accent_material_light"
                            android:gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="30dp"
                            android:background="@color/orange"
                            android:padding="10dp"
                            android:text="Since,yesterday"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="@color/primary_text_default_material_dark"
                        >
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="4"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textSize="32sp"
                                android:id="@+id/nosaved1"
                                android:textAlignment="center" />
                            <Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="saved"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="20"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textSize="32sp"
                                android:id="@+id/norejected1"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="rejected"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="5"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textSize="32sp"
                                android:id="@+id/nofilters1"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="filters"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_height="100dp"
                            android:layout_width="match_parent"
                            android:background="@color/aqua"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/textViw3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="30dp"
                            android:background="@color/orange"
                            android:padding="10dp"
                            android:text="Since,yesterday"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="@color/background_floating_material_light"
                        >
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="4"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textSize="32sp"
                                android:id="@+id/nosaved2"
                                android:textAlignment="center" />
                            <Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="saved"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="20"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textSize="32sp"
                                android:id="@+id/norejected2"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="rejected"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="5"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:textSize="32sp"
                                android:id="@+id/nofilters2"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="filters"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_height="100dp"
                            android:layout_width="match_parent"
                            android:background="@color/background_material_dark"
                            android:gravity="center_horizontal"
                            />
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:background="@color/primary_text_default_material_dark"
                            >
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="4"
                                    android:textStyle="bold"
                                    android:textColor="@color/orange"
                                    android:textSize="32sp"
                                    android:id="@+id/nosaved3"
                                    android:textAlignment="center" />
                                <Space
                                    android:layout_width="5dp"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="saved"
                                    android:textColor="@color/orange"
                                    android:textSize="16sp"
                                    />
                            </LinearLayout>
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="20"
                                    android:textStyle="bold"
                                    android:textColor="@color/orange"
                                    android:textSize="32sp"
                                    android:id="@+id/norejected3"
                                    android:textAlignment="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="rejected"
                                    android:textColor="@color/orange"
                                    android:textSize="16sp"
                                    />
                            </LinearLayout>
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="5"
                                    android:textStyle="bold"
                                    android:textColor="@color/orange"
                                    android:textSize="32sp"
                                    android:id="@+id/nofilters3"
                                    android:textAlignment="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="filters"
                                    android:textColor="@color/orange"
                                    android:textSize="16sp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="@color/accent_material_light"
                        >
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="4"
                                android:textColorHighlight="@color/orange"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="saved"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="20 rejected"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="8 Filters"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="BROWSE"
                android:textColor="@color/orange"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEALS OF THE DAY"
                        android:textSize="10sp"
                        android:background="@color/white"
                        android:textColor="@color/blue"
                        android:id="@+id/deal_bttn"
                        />
                    <TextView
                        android:layout_height="3dp"
                        android:layout_width="fill_parent"
                        android:background="@color/white"
                        android:id="@+id/deals_marker"/>


                </LinearLayout>
                <Space
                    android:layout_width="6dp"
                    android:layout_height="match_parent" />
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOT AT MICROSOFT"
                        android:textSize="10sp"
                        android:background="@color/white"
                        android:textColor="@color/blue"
                        android:id="@+id/micro_bttn"
                        />
                    <TextView
                        android:layout_height="3dp"
                        android:layout_width="fill_parent"
                        android:background="@color/orange"
                        android:id="@+id/microsoft_marker" />
                </LinearLayout>
                <Space
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"

                    />
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOT AT Lt"
                        android:textSize="10sp"
                        android:textColor="@color/blue"
                        android:background="@color/white"
                        android:id="@+id/hot_bttn"
                        />
                    <TextView
                        android:layout_height="3dp"
                        android:layout_width="fill_parent"
                        android:background="@color/white"
                        android:id="@+id/hot_marker" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_height="150dp"
                        android:layout_width="180dp"
                        android:background="@color/background_material_dark"
                        android:gravity="center_horizontal"
                        />
                    <Space
                        android:layout_width="6dp"
                        android:layout_height="150dp"
                        />
                    <ImageView
                        android:layout_height="150dp"
                        android:layout_width="190dp"
                        android:background="@color/background_material_dark"
                        android:gravity="center_horizontal"
                        />



                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/background_material_dark"
        android:gravity="center_horizontal"
        />

</LinearLayout>